<!doctype html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Audiências - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<%- include("../partials/_navbar") %>

<div class="container mt-4">

    <h3>Audiências</h3>
    <hr>

    <% audiencias.forEach(a => { %>
        <div class="card p-3 mb-3">

            <h5><strong>Data:</strong> <%= a.data.toLocaleDateString("pt-BR") %></h5>
            <p><strong>Local:</strong> <%= a.local %></p>

            <p><strong>Caso:</strong> <%= a.caso.titulo %></p>

            <p><strong>Cliente:</strong> <%= a.caso.cliente.nome %></p>

            <p><strong>Advogado responsável:</strong>
                <%= a.caso.advogado_responsavel ? a.caso.advogado_responsavel.nome : "Não atribuído" %>
            </p>

            <form action="/admin/audiencias/deletar" method="POST">
                <input type="hidden" name="id" value="<%= a.audiencia_id %>">
                <button class="btn btn-danger">Excluir</button>
            </form>

        </div>
    <% }) %>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
