<!doctype html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>LexControl</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<%- include("../partials/_navbar") %>
<% if (success_msg && success_msg.length > 0) { %>
    <% success_msg.forEach(msg => { %>
        <div class="alert alert-success"><%= msg %></div>
    <% }) %>
    <% } %>

    <% if (error_msg && error_msg.length > 0) { %>
    <% error_msg.forEach(msg => { %>
        <div class="alert alert-danger"><%= msg %></div>
    <% }) %>
    <% } %>

<div class="container mt-4">

    <h3>Audiências</h3>
    <hr>

    <form method="GET" action="/admin/audiencias" class="mb-4">
        <div class="input-group">
            <input
                type="number"
                name="search"
                class="form-control"
                placeholder="Pesquisar pelo número do processo"
                value="<%= typeof search !== 'undefined' ? search : '' %>"
            >
            <button class="btn btn-primary" type="submit">
                Buscar
            </button>
        </div>
    </form>

    <%
      const futuras = audiencias.filter(a => new Date(a.data) >= hoje);
      const passadas = audiencias.filter(a => new Date(a.data) < hoje);
    %>

    <h5 class="text-success mt-4">Audiências futuras</h5>

    <% if (futuras.length === 0) { %>
        <p class="text-muted">Nenhuma audiência futura.</p>
    <% } %>

    <% futuras.forEach(a => { %>
        <div class="card p-3 mb-3 border-success">

            <h5>
                <strong>Data:</strong>
                <%= a.data.toLocaleDateString("pt-BR") %>
            </h5>

            <p><strong>Local:</strong> <%= a.local %></p>

            <p><strong>Caso:</strong> <%= a.caso.titulo %></p>
            <p><strong>Processo Nº:</strong> <%= a.caso.caso_id %></p>

            <p><strong>Cliente:</strong> <%= a.caso.cliente.nome %></p>

            <p>
                <strong>Advogado responsável:</strong>
                <%= a.caso.advogado_responsavel
                    ? a.caso.advogado_responsavel.nome
                    : "Não atribuído"
                %>
            </p>

            <form action="/admin/audiencias/deletar" method="POST">
                <input type="hidden" name="id" value="<%= a.audiencia_id %>">
                <button class="btn btn-danger btn-sm">Excluir</button>
            </form>
        </div>
    <% }) %>

    <h5 class="text-secondary mt-5">Audiências passadas</h5>

    <% if (passadas.length === 0) { %>
        <p class="text-muted">Nenhuma audiência passada.</p>
    <% } %>

    <% passadas.forEach(a => { %>
        <div class="card p-3 mb-3">

            <h5>
                <strong>Data:</strong>
                <%= a.data.toLocaleDateString("pt-BR") %>
            </h5>

            <p><strong>Local:</strong> <%= a.local %></p>

            <p><strong>Caso:</strong> <%= a.caso.titulo %></p>
            <p><strong>Processo Nº:</strong> <%= a.caso.caso_id %></p>

            <p><strong>Cliente:</strong> <%= a.caso.cliente.nome %></p>

            <p>
                <strong>Advogado responsável:</strong>
                <%= a.caso.advogado_responsavel
                    ? a.caso.advogado_responsavel.nome
                    : "Não atribuído"
                %>
            </p>

            <form action="/admin/audiencias/deletar" method="POST">
                <input type="hidden" name="id" value="<%= a.audiencia_id %>">
                <button class="btn btn-danger btn-sm">Excluir</button>
            </form>
        </div>
    <% }) %>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
