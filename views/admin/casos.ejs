<!doctype html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>LexControl</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<%- include("../partials/_navbar") %>

<div class="container mt-4">

    <h3>Casos</h3>
    <hr>

    <form method="GET" action="/admin/casos" class="mb-4">
        <div class="input-group">
            <input
                type="number"
                name="search"
                class="form-control"
                placeholder="Pesquisar pelo número do processo"
                value="<%= typeof search !== 'undefined' ? search : '' %>"
            >
            <button class="btn btn-primary" type="submit">
                Buscar
            </button>
        </div>
    </form>

    <h5 class="text-success mt-4">Casos em andamento</h5>

    <% 
      const emAndamento = casos.filter(c => c.status === "EM_ANDAMENTO");
      const outrosCasos = casos.filter(c => c.status !== "EM_ANDAMENTO");
    %>

    <% if (emAndamento.length === 0) { %>
        <p class="text-muted">Nenhum caso em andamento.</p>
    <% } %>

    <% emAndamento.forEach(caso => { %>
        <div class="card p-3 mb-3 border-success">
            <h5>
                <strong>Título:</strong> <%= caso.titulo %> -
                <strong>Processo Nº</strong> <%= caso.caso_id %>
            </h5>

            <p><strong>Status:</strong> <%= caso.status %></p>

            <p>
                <strong>Prazo final:</strong>
                <%= caso.prazo_final
                    ? caso.prazo_final.toLocaleDateString("pt-BR")
                    : "Não definido"
                %>
            </p>

            <p><strong>Cliente:</strong> <%= caso.cliente.nome %></p>

            <p>
                <strong>Advogado responsável:</strong>
                <%= caso.advogado_responsavel
                    ? caso.advogado_responsavel.nome
                    : "Não atribuído"
                %>
            </p>

            <form action="/admin/casos/deletar" method="POST">
                <input type="hidden" name="id" value="<%= caso.caso_id %>">
                <button class="btn btn-danger btn-sm">Excluir</button>
            </form>
        </div>
    <% }) %>

    <h5 class="text-secondary mt-5">Casos finalizados, arquivados ou suspensos</h5>

    <% if (outrosCasos.length === 0) { %>
        <p class="text-muted">Nenhum caso finalizado, arquivado ou suspenso.</p>
    <% } %>

    <% outrosCasos.forEach(caso => { %>
        <div class="card p-3 mb-3">
            <h5>
                <strong>Título:</strong> <%= caso.titulo %> -
                <strong>Processo Nº</strong> <%= caso.caso_id %>
            </h5>

            <p><strong>Status:</strong> <%= caso.status %></p>

            <p>
                <strong>Prazo final:</strong>
                <%= caso.prazo_final
                    ? caso.prazo_final.toLocaleDateString("pt-BR")
                    : "Não definido"
                %>
            </p>

            <p><strong>Cliente:</strong> <%= caso.cliente.nome %></p>

            <p>
                <strong>Advogado responsável:</strong>
                <%= caso.advogado_responsavel
                    ? caso.advogado_responsavel.nome
                    : "Não atribuído"
                %>
            </p>

            <form action="/admin/casos/deletar" method="POST">
                <input type="hidden" name="id" value="<%= caso.caso_id %>">
                <button class="btn btn-danger btn-sm">Excluir</button>
            </form>
        </div>
    <% }) %>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
