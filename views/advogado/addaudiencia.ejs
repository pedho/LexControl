<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>LexControl</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <%- include("../partials/_navbar") %>
    <% if (success_msg && success_msg.length > 0) { %>
    <% success_msg.forEach(msg => { %>
        <div class="alert alert-success"><%= msg %></div>
    <% }) %>
    <% } %>

    <% if (error_msg && error_msg.length > 0) { %>
    <% error_msg.forEach(msg => { %>
        <div class="alert alert-danger"><%= msg %></div>
    <% }) %>
    <% } %>

    <div class="container mt-4">
      <div class="card p-3">
        <h2>Nova Audiência</h2>

        <form action="/advogado/audiencias/add" method="post">
          <label for="caso_id">Caso:</label>
          <select name="caso_id" id="caso_id" class="form-control" required>
            <% casos.forEach(c => { %>
              <option value="<%= c.caso_id %>"><%= c.titulo %> <% if (c.cliente) { %> - <%= c.cliente.nome %> <% } %></option>
            <% }) %>
          </select>

          <label for="data" class="mt-2">Data e Hora:</label>
          <input type="datetime-local" id="data" name="data" class="form-control" required>

          <label for="local" class="mt-2">Local:</label>
          <input type="text" id="local" name="local" class="form-control" placeholder="Local da audiência" required>

          <br>
          <button class="btn btn-success" type="submit">Adicionar audiência</button>
        </form>
      </div>
    </div>

  </body>
</html>
