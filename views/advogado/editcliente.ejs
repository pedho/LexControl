<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>LexControl</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
  </head>
  <body>
    <%- include("../partials/_navbar") %>
    <% if (success_msg && success_msg.length > 0) { %>
    <% success_msg.forEach(msg => { %>
        <div class="alert alert-success"><%= msg %></div>
    <% }) %>
    <% } %>

    <% if (error_msg && error_msg.length > 0) { %>
    <% error_msg.forEach(msg => { %>
        <div class="alert alert-danger"><%= msg %></div>
    <% }) %>
    <% } %>


      <h2>Edição do cliente</h2>
    <div class="card">
        <div class="card-body">
            <form action="/advogado/clientes/edit" method="post">

            <input type="hidden" name="id" value="<%= cliente.cliente_id %>">
            <label for="nome">Nome: </label>
            <input type="text" id="nome" name="nome" placeholder="Nome do advogado" class="form-control" value="<%= cliente.nome %>">
            <label for="telefone">Telefone: </label>
            <input type="text" id="telefone" name="telefone" placeholder="Telefone" class="form-control" value="<%= cliente.telefone %>">
            <label for="endereco">Endereço: </label>
            <input type="text" id="endereco" name="endereco" placeholder="Endereço" class="form-control" value="<%= cliente.endereco %>">
            <label for="email">Email: </label>
            <input type="text" id="email" name="email" placeholder="Email do advogado" class="form-control" value="<%= cliente.email %>">
            <label for="cpf_cnpj">CPF ou CNPJ: </label>
            <input type="text" id="cpf_cnpj" name="cpf_cnpj" placeholder="CPF ou CNPJ" class="form-control" value="<%= cliente.cpf_cnpj %>">
            
            <br>
            <button type="submit" class="btn btn-success">Editar cliente</button>
            </form>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
  </body>
</html>
