<!doctype html>
<html lang="pt-br">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>LexControl</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>

<div class="card">
  <%- include("../partials/_navbar") %>

  <div class="card-body text-center">

    <img src="/img/lexcontrolicon.jpg" width="160" class="mb-4">

    <h5 class="mb-4" style="color:#0B2E56;">Onde o Direito encontra a Ordem</h5>

    <form action="/advogado/login" method="post" class="text-start">

      <label>Email:</label>
      <input type="email" name="email" class="form-control" required>

      <label class="mt-3">Senha:</label>
      <input type="password" name="senha" class="form-control" required>

      <button type="submit"
              class="btn btn-primary mt-4 w-100"
              style="background:#0B2E56; border-color:#0B2E56;">
        Entrar
      </button>

    </form>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
